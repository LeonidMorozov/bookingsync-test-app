<h1>Bookings</h1>

<%= render 'search' %>

<hr/>

<% if @bookings.any? %>

<table cellspacing="10">
  <tr>
    <th>ID</th>
    <th>Start at</th>
    <th>End at</th>
    <th>Status</th>
  </tr>

  <% @bookings.each do |booking| %>
    <tr>
      <td><%= link_to booking[:id], action: :show, id: booking[:id] %></td>
      <td><%= Date.parse(booking[:start_at]).strftime("%Y-%m-%d") %></td>
      <td><%= Date.parse(booking[:end_at]).strftime("%Y-%m-%d") %></td>
      <td><%= booking[:status] %></td>
    </tr>
  <% end %>
</table>

<% else %>
  <p>No bookings</p>
<% end %>
