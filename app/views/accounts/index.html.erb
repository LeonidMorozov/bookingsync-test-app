<h1><%= t('accounts') %></h1>

<% if @accounts %>

<table>
  <tr>
    <th><%= t('business_name') %></th>
    <th><%= t('status') %></th>
  </tr>

  <% @accounts.each do |account| %>
    <tr>
      <td><%= link_to account[:business_name], action: :show, id: account[:id] %></td>
      <td><%= account[:status] %></td>
    </tr>
  <% end %>
</table>

<%end%>
